
<style>

        /* Navbar Styling */
        .navbar {
            transition: background-color 0.4s, color 0.4s;
            z-index: 1050; /* Keep it on top */
            position: sticky;
            top: 0;
        }

        /* Transparent Navbar */
        .navbar.transparent {
            background: transparent;
        }

        /* Solid Navbar (After Hero Section) */
        .navbar.solid {
            background-color: white !important;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Navbar Text Colors */
        .navbar.transparent .nav-link,
        .navbar.transparent .navbar-brand {
            color: black;
        }

        .navbar.solid .nav-link,
        .navbar.solid .navbar-brand {
            color: black !important;
        }
    
/* Hero Section Styling */
.hero-image {
    height: 100vh; /* Full viewport height */
    background: url('{{ url_for("static", filename="images/product1.jpg") }}') no-repeat center center/cover;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    z-index: 1;
}

.hero-image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Dark overlay for text contrast */
    z-index: -1;
}

    /* Navbar Styling */
    .navbar {
        transition: background-color 0.4s, color 0.4s;
        z-index: 10;
    }

    .navbar.transparent {
        background: transparent;
    }

    .navbar.solid {
        background-color: white !important;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
    }

    .navbar.transparent .nav-link,
    .navbar.transparent .navbar-brand {
        color: white;
    }

    .navbar.solid .nav-link,
    .navbar.solid .navbar-brand {
        color: black !important;
    }

    .hero-text h1 {
        font-size: 4rem;
        font-weight: 700;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }

    .hero-text p {
        font-size: 1.5rem;
        margin-top: 10px;
        color: white;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }
</style>
<!-- home.jinja -->
{% extends 'base.jinja' %}

{% block content %}
<!-- Hero Section -->
<section class="hero-image">
    <div class="hero-text">
        <h1>Welcome to Guided Clothing</h1>
        <p>Discover amazing products crafted just for you</p>
        <a href="#products" class="btn btn-light btn-lg mt-4 shadow-sm">Explore Now</a>
    </div>
</section>

<!-- Featured Products Section -->
<section id="featured-products" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Featured Products</h2>
        <div class="row">
            {% for product in featured %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{ url_for('static', filename='images/' + product['image']) }}" class="card-img-top"
                        alt="{{ product['name'] }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product['name'] }}</h5>
                        <p class="price">$ {{ product['price'] }}</p>
                        <a href="{{ url_for('product_detail', product_id=product['id']) }}" class="btn btn-outline-dark mt-3 w-100">View Product</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
