{% extends 'base.jinja' %}

{% block content %}
<h2 class="text-center mb-5">Our Products</h2>

<div class="row">
    {% for product in products %}
    <div class="col-md-4">
        <div class="card mb-4">
            <img src="{{ url_for('static', filename='images/' + product['image']) }}" class="card-img-top" alt="{{ product['name'] }}">
            <div class="card-body">
                <h5 class="card-title">{{ product['name'] }}</h5>
                <p class="price">$ {{ product['price'] }}</p>
                <a href="{{ url_for('product_detail', product_id=product['id']) }}" class="btn btn-outline-dark mt-3 w-100">View Product</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
