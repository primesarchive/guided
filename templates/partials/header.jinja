<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Navbar Styling */
        .navbar {
            transition: background-color 0.4s, color 0.4s;
            z-index: 1050; /* Keep it on top */
            position: sticky;
            top: 0;
        }

        /* Transparent Navbar */
        .navbar.transparent {
            background: transparent;
        }

        /* Solid Navbar (After Hero Section) */
        .navbar.solid {
            background-color: white !important;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Navbar Text Colors */
        .navbar.transparent .nav-link,
        .navbar.transparent .navbar-brand {
            color: black;
        }

        .navbar.solid .nav-link,
        .navbar.solid .navbar-brand {
            color: black !important;
        }
    </style>
</head>

<!-- navbar.jinja -->
<nav class="navbar navbar-expand-lg navbar-light transparent">
    <div class="container">
        <a class="navbar-brand" href="{{ url_for('home') }}">Guided</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('lookbook') }}">Lookbook</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('archive') }}">Archive</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for('about') }}">About</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // JavaScript to add/remove the 'solid' class based on scroll position
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) { // When scrolling down more than 50px
            navbar.classList.add('solid');
            navbar.classList.remove('transparent');
        } else { // When at the top of the page
            navbar.classList.add('transparent');
            navbar.classList.remove('solid');
        }
    });
</script>
